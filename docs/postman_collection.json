{
  "info": {
    "name": "Luxury Real Estate API",
    "_postman_id": "9b0dd1c8-0000-4db4-9999-000000000001",
    "description": "Auth, properties, bookings, payments (Stripe/bKash).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/auth/register/", "host": ["{{baseUrl}}"], "path": ["auth", "register", ""] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"StrongPass123\"\n}" }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/auth/login/", "host": ["{{baseUrl}}"], "path": ["auth", "login", ""] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"StrongPass123\"\n}" }
      }
    },
    {
      "name": "Properties - List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/properties/", "host": ["{{baseUrl}}"], "path": ["api", "properties", ""] }
      }
    },
    {
      "name": "Bookings - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/bookings/create/", "host": ["{{baseUrl}}"], "path": ["api", "bookings", "create", ""] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"property_id\": 1,\n  \"start_at\": \"2025-12-01T10:00:00Z\",\n  \"end_at\": \"2025-12-01T12:00:00Z\"\n}"
        }
      }
    },
    {
      "name": "Payments - Initiate Stripe",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/payments/initiate/", "host": ["{{baseUrl}}"], "path": ["api", "payments", "initiate", ""] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"provider\": \"stripe\",\n  \"booking_id\": 1\n}"
        }
      }
    },
    {
      "name": "Payments - Initiate bKash",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/payments/initiate/", "host": ["{{baseUrl}}"], "path": ["api", "payments", "initiate", ""] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"provider\": \"bkash\",\n  \"booking_id\": 1\n}"
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "accessToken", "value": "" }
  ]
}
